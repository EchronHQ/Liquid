<?php
declare(strict_types=1);

/**
 * @var $this TemplateEngine
 * @var $block Template
 * @var $viewModel TagBar
 * @var $baseViewModel BaseViewModel
 */

use Liquid\Content\ViewModel\BaseViewModel;
use Liquid\Content\ViewModel\TagBar;
use Liquid\Framework\View\Element\Template;
use Liquid\Framework\View\TemplateEngine;

$viewModel = $block->getViewModel('', TagBar::class);
$baseViewModel = $block->getViewModel('base', BaseViewModel::class);

$tags = $viewModel->getTags();
if (count($tags) > 0):
    ?>
    <div class="tags-wrapper">
        <?php if ($viewModel->getLabel()): ?>
            <div class="label"><?= $viewModel->getLabel() ?></div>
        <?php endif; ?>
        <div class="tags">
            <?php if (!empty($viewModel->getAllTarget())): ?>
                <a class="tag <?= $viewModel->hasSelected() ? '' : 'active' ?>"
                   href="<?= $viewModel->getAllTarget() ?>">
                    All
                </a>
            <?php
            endif;
            foreach ($tags as $tag): ?>
                <a class="tag <?= $viewModel->isSelectedTag($tag) ? 'active' : '' ?>"
                   href="<?= $baseViewModel->getUrl()->getUrl($tag->getUrlPath()) ?>">
                    <?= $viewModel->getTagLabel($tag) ?>
                </a>
            <?php endforeach; ?>
        </div>
    </div>
<?php
endif;
