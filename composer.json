{
  "name": "echron/liquid",
  "description": "Liquid",
  "authors": [
    {
      "name": "Stijn Duynslaeger",
      "email": "stijn@echron.com"
    }
  ],
  "license": "proprietary",
  "support": {
    "email": "hello@echron.com",
    "docs": "https://echron.com/"
  },
  "require": {
    "php": ">=8.4",
    "php-di/php-di": "^7.1.1",
    "attlaz/attlaz-monolog": "^2.2.1",
    "attlaz/adapter-base": "^1.16.7",
    "symfony/mailer": "^7.3.4",
    "laminas/laminas-http": "^2.22.0",
    "symfony/yaml": "^v7.3.3",
    "symfony/console": "^v7.3.3",
    "symfony/cache": "^v7.3.4",
    "gumlet/php-image-resize": "^2.1.2",
    "echron/tools": "^1.8.1",
    "thecodingmachine/safe": "^3.3.0",
    "matthiasmullie/minify": "^1.3.75",
    "voku/html-min": "^4.5.1",
    "ext-redis": "*",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-gd": "*",
    "ext-sodium": "*"
  },
  "replace": {
    "illuminate/view": "^8.20",
    "hansschouten/phpagebuilder": "v0.21.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.4.1",
    "squizlabs/php_codesniffer": "^4.0.0",
    "phpmd/phpmd": "^2.15.0",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^v3.89"
  },
  "autoload": {
    "psr-4": {
      "Liquid\\": "app/code/Liquid/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.attlaz.com/"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "process-timeout": 600,
    "preferred-install": "source"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "lint:fix": " ./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
    "phpstan": " ./vendor/bin/phpstan analyse --memory-limit=512M",
    "phpstan:generate-baseline": " ./vendor/bin/phpstan analyse --generate-baseline --memory-limit=512M",
    "phpmd": "./vendor/bin/phpmd . text phpmd.xml"
  }
}
