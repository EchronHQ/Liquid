{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "sourceRoot": "app/",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "typeRoots": [
    "../../typings",
    "../../node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "pub",
    "config"
  ]
}
